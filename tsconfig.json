{
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    ".yarn/**/*",
    "**/*.d.ts"
  ],
  "compilerOptions":{
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": ".",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2022",
    "types": [
    ]
  }
}
